    <script>
        // Bizning modalimiz
        var modal = document.getElementById("demo-modal");

        // Tugma, modalni chiqarish uchun
        var btn = document.getElementById("view-options-btn");

        // Modalni yopish uchun <span> tugmasi
        var span = document.getElementsByClassName("close")[0];

        // Tugmani bosganda modalni chiqarish
        btn.onclick = function() {
          modal.style.display = "block";
        }

        // <span> tugmasini bosganda modalni yopish
        span.onclick = function() {
          modal.style.display = "none";
        }

        // Modalning o'rnidan boshqa joyda bosganda ham yopish
        window.onclick = function(event) {
          if (event.target == modal) {
            modal.style.display = "none";
          }
        }
    </script>
